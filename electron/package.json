{
  "name": "electron",
  "version": "0.0.1",
  "homepage": "https://saybackend.com",
  "author": {
    "name": "spa5k",
    "email": "admin@saybackend.com",
    "url": "https://saybackend.com"
  },
  "main": "./build/main.js",
  "scripts": {
    "clean": "rm -rf web",
    "copy": "cp ../web/.next/standalone/web web -r && cp ../web/.next/static web/.next/static -r && cp ../web/public web/public -r",
    "prepare": "npm run clean && npm run copy",
    "dist": "npm run prepare && electron-builder --dir",
    "linux": "npm run prepare && electron-builder --linux deb",
    "win": "npm run prepare && electron-builder --win",
    "mac": "npm run prepare && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps",
    "start": "NODE_ENV=development electron .",
    "build": "tsup",
    "build:dev": "tsup --watch",
    "dev": "npm-run-all --parallel build:dev electron:dev",
    "electron:dev": "cross-env NODE_ENV='development' nodemon"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@next/env": "^14.2.5",
    "cross-env": "^7.0.3",
    "get-port-please": "^3.1.2",
    "next": "^14.2.5",
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "asar": true,
    "executableName": "NextJSElectron",
    "appId": "com.saybackend.nextjs-electron",
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/sharp"
    ],
    "files": [
      "build",
      {
        "from": "web",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    }
  }
}
