{
  "name": "electron",
  "version": "0.0.1",
  "author": {
    "name": "spa5k",
    "email": "admin@saybackend.com",
    "url": "https://saybackend.com"
  },
  "main": "./build/main.js",
  "scripts": {
    "dist": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "start": "NODE_ENV=development electron .",
    "build": "tsup",
    "build:dev": "tsup --watch",
    "dev": "npm-run-all --parallel build:dev electron:dev",
    "electron:dev": "cross-env NODE_ENV='development' nodemon"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "cross-env": "^7.0.3",
    "get-port-please": "^3.1.2",
    "next": "^14.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "asar": true,
    "executableName": "NextJSElectron",
    "files": [
      "build"
    ],
    "extraFiles": [
      {
        "from": "../web/.next/standalone/web",
        "to": "web"
      },
      {
        "from": "../web/.next/static",
        "to": "web/.next/static"
      },
      {
        "from": "../web/public",
        "to": "web/public"
      }
    ]
  }
}
